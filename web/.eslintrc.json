{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true
    }],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "object-curly-spacing": ["warn", "always"],
    "space-in-parens": ["warn", "never"],
    "space-infix-ops": ["warn", { "int32Hint": false }]
  }
}